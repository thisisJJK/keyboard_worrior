class Poem {
  final String title;
  final String writer;
  final String content;

  Poem({required this.title, required this.writer, required this.content});

  factory Poem.fromJson(Map<String, dynamic> json) {
    return Poem(
      title: json['title'],
      writer: json['writer'],
      content: json['content'],
    );
  }
}

class Word {
  final String title;

  final String content;

  Word({required this.content,required this.title,});

  factory Word.fromJson(Map<String, dynamic> json) {
    return Word(
      title: json['title'],

      content: json['content'],
    );
  }
}

class Proverb {
  final String title;

  final String content;

  Proverb({required this.content,required this.title,});

  factory Proverb.fromJson(Map<String, dynamic> json) {
    return Proverb(
      title: json['title'],

      content: json['content'],
    );
  }
}

class Custom {
  final String title;
  final String content;

  Custom({required this.title, required this.content});

  factory Custom.fromJson(Map<String, dynamic> json) {
    return Custom(
      title: json['title'],
      content: json['content'],
    );
  }
}

class WritingData {
  final List<Poem> poems;
  final List<Word> words;
  final List<Proverb> proverbs;
  final List<Custom> customs;

  WritingData({required this.poems, required this.words, required this.proverbs, required this.customs});

  factory WritingData.fromJson(Map<String, dynamic> json) {
    return WritingData(
      poems: (json['poem'] as List).map((item) => Poem.fromJson(item)).toList(),
      words: (json['word'] as List).map((item) => Word.fromJson(item)).toList(),
      proverbs: (json['proverb'] as List).map((item) => Proverb.fromJson(item)).toList(),
      customs: (json['custom'] as List).map((item) => Custom.fromJson(item)).toList(),
    );
  }
}
